<mvc:View
	controllerName="sap.ui.demo.fiori2.controller.Detail"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<ObjectPageLayout
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		alwaysShowContentHeader="false"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
		isChildPage="true"
		upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="{details>/programDetails/name}" wrapping="true" class="sapUiSmallMarginEnd"/>
				</expandedHeading>

				<snappedHeading>
					<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Center">
						<m:FlexBox wrap="NoWrap" fitContainer="true" alignItems="Center" class="sapUiTinyMarginEnd">
							<f:Avatar
								src="sap-icon://course-program"
								displaySize="S"
								displayShape="Circle"
								class="sapUiTinyMarginEnd"/>
							<m:Title text="{details>/programDetails/name}" wrapping="true"/>
						</m:FlexBox>
					</m:FlexBox>
				</snappedHeading>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Stretch">
				<f:Avatar
					src="sap-icon://course-program"
					displaySize="L"
					displayShape="Circle"
					class="sapUiTinyMarginEnd">
				</f:Avatar>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="{i18n>detailPageStartDate}"/>
					<m:Text text="{details>/programDetails/startDate}"/>
				</m:VBox>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="{i18n>detailPageEndDate}"/>
					<m:Text text="{details>/programDetails/endDate}"/>
				</m:VBox>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="{i18n>detailPageWorkingHours}"/>
					<m:Text text="{details>/programDetails/workingHours}"/>
				</m:VBox>
			</m:FlexBox>
		</headerContent>

		<sections>
			<ObjectPageSection title="{i18n>detailPageDescription}">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<form:SimpleForm
								maxContainerCols="2"
								editable="false"
								layout="ResponsiveGridLayout"
								labelSpanL="12"
								labelSpanM="12"
								emptySpanL="0"
								emptySpanM="0"
								columnsL="1"
								columnsM="1">
								<form:content>
									<m:Label text="{i18n>detailPageProgramName}"/>
									<m:Text text="{details>/programDetails/name}"/>
									<m:Label text="{i18n>detailPageProgramDuration}"/>
									<m:Text text="{details>/programDetails/startDate} - {details>/programDetails/endDate}"/>
									<m:Label text="{i18n>detailPageWorkingHours}"/>
									<m:Text text="{details>/programDetails/workingHours}"/>
								</form:content>
							</form:SimpleForm>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection title="{i18n>detailPageUsers}">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:Table
								id="suppliersTable"
								items="{path : 'details>/users'}">
								<m:columns>
									<m:Column/>
								</m:columns>
								<m:items>
									<m:ColumnListItem>
										<m:cells>
											<m:ObjectIdentifier title="{details>firstName} {details>lastName}" 
											text="Username: {details>username} ({details>role})"/>
										</m:cells>
									</m:ColumnListItem>
								</m:items>
							</m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			
			<ObjectPageSection title="{i18n>detailPagePspElements}">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:Table
								id="pspTable"
								items="{path : 'details>/psps'}">
								<m:columns>
									<m:Column/>
								</m:columns>
								<m:items>
									<m:ColumnListItem>
										<m:cells>
											<m:ObjectIdentifier text="{details>pspName}"/>
										</m:cells>
									</m:ColumnListItem>
								</m:items>
							</m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			
		</sections>
	</ObjectPageLayout>
</mvc:View>