<mvc:View height="100%" controllerName="sap.ui.demo.fiori2.controller.Wizard" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<NavContainer id="wizardNavContainer">
		<pages>
			<Page id="wizardContentPage" showHeader="false">
				<content>
					<Wizard id="CreateProgramWizard" class="sapUiResponsivePadding--header sapUiResponsivePadding--content" complete="wizardCompletedHandler">
						<WizardStep id="CreateProgramStep" title="{i18n>createProgramStep}" validated="false" activate="createProgramStepValidation">
							<form:SimpleForm editable="true">
								<Label text="{i18n>programName}"/>
								<Input id="programName" placeholder="{i18n>programNamePlaceholder}"
									value="{ path : '/programName', type : 'sap.ui.model.type.String', constraints : { minLength: 1, maxLength: 255 } }" change="onChange"
									liveChange="onChange" valueState="{/firstNameState}"/>
								<Label text="{i18n>programStartDate}"/>
								<DatePicker id="startDate" valueFormat="YYYY-MM-dd" displayFormat="YYYY-MM-dd" placeholder="{i18n>dateFormat}"
									value="{ path : '/startDate', type : 'sap.ui.model.type.Data'}" change="onDateValidation"/>
								<Label text="{i18n>programEndDate}"/>
								<DatePicker id="endDate" valueFormat="YYYY-MM-dd" displayFormat="YYYY-MM-dd" placeholder="{i18n>dateFormat}"
									value="{ path : '/endDate', type : 'sap.ui.model.type.Data'}" change="onDateValidation"/>
								<Label text="{i18n>programWorkingHours}"/>
								<Select id="workingHoursSelect" items="{users>/workingHours}">
									<core:Item text="{users>value}"/>
								</Select>
							</form:SimpleForm>
						</WizardStep>
						<WizardStep id="CreateUsersStep" title="{i18n>createUsersStep}" validated="false" activate="createUsersStepValidation">
							<OverflowToolbarButton icon="sap-icon://add" type="Transparent" press=".onAddUser"/>
							<Button class="sapUiSmallMarginBottom" text="Show Added Users" press=".handleDisplayUsers"/>
							<form:SimpleForm editable="true">
								<Label text="{i18n>firstName}"/>
								<Input id="firstName" placeholder="{i18n>enterFirstName}" value="" valueState="{/firstNameState}"/>
								<Label text="{i18n>lastName}"/>
								<Input id="lastName" placeholder="{i18n>enterLastName}" value="" valueState="{/lastNameState}"/>
								<Label text="{i18n>username}"/>
								<Input id="username" placeholder="{i18n>enterUsername}" value="" liveChange="usernameValidation" valueState="{/usernameState}"/>
								<Label text="{i18n>password}"/>
								<Input id="password" placeholder="{i18n>enterPassword}" value="" liveChange="passwordValidation" valueState="{/passwordState}"/>
							</form:SimpleForm>
						</WizardStep>
						<WizardStep id="CreatePSPStep"
										title="Create PSP"
										validated="true">
								<OverflowToolbar class="sapFDynamicPageAlignContent">
									<ToolbarSpacer/>
										<Button text="{i18n>viewExistingPsps}" press=".onViewPsps"/>
										<OverflowToolbarButton icon="sap-icon://add" type="Transparent" press=".onAddPsp"/>
								</OverflowToolbar>
								<form:SimpleForm editable="true">
									<VBox alignItems="End">
										<HBox alignItems="Center">
											<Text id="createdPsps"/>
										</HBox>
									</VBox>
									<Label text="{i18n>pspName}" required="true"/>
									<Input id="PspName" placeholder="{i18n>pspNameInput}" value="{/pspName}"/>
								</form:SimpleForm>
							</WizardStep>
					</Wizard>
				</content>
				<footer>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<Button text="{i18n>cancel}" press="handleWizardCancel"/>
					</OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</NavContainer>
</mvc:View>
