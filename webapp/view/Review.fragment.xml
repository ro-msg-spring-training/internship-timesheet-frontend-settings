<core:FragmentDefinition height="100%" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns="sap.m">
	<Page id="wizardReviewPage" showHeader="false">
		<content>
			<form:SimpleForm title="1. {i18n>reviewProgramInfo}" minWidth="1024" editable="false" layout="ResponsiveGridLayout">
				<form:content>
					<Label text="{i18n>programName}"/>
					<Text id="ProgramName" text=""/>
					<Label text="{i18n>programStartDate}"/>
					<Text id="ProgramStartDate" text=""/>
					<Label text="{i18n>programEndDate}"/>
					<Text id="ProgramEndDate" text=""/>
					<Label text="{i18n>programWorkingHours}"/>
					<Text id="ProgramWorkingHours" text=""/>
					<Link press="editStepOne" text="Edit"/>
				</form:content>
			</form:SimpleForm>
			<form:SimpleForm title="2. {i18n>reviewUsersInfo}" minWidth="1024" editable="false" layout="ResponsiveGridLayout">
				<form:content>
					<Table id="usersTable" items="{path : 'users>/createdUsersData'}">
						<columns>
							<Column/>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<ObjectIdentifier title="{users>firstName} {users>lastName}" text="Username: {users>username} Password: {users>password}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
					<Link press="editStepTwo" text="Edit"/>
				</form:content>
			</form:SimpleForm>
			<form:SimpleForm title="3. {i18n>reviewPspElementsInfo}" minWidth="1024" editable="false" layout="ResponsiveGridLayout">
				<form:content>
					<Table id="pspsTable" items="{path : ''}">
						<columns>
							<Column/>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<ObjectIdentifier text=""/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
					<Link press="editStepThree" text="Edit"/>
				</form:content>
			</form:SimpleForm>
		</content>
		<footer>
			<Bar>
				<contentRight>
					<Button text="Submit" press="handleWizardSubmit"/>
					<Button text="Cancel" press="handleWizardCancel"/>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</core:FragmentDefinition>